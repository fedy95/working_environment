{
    "name": "fedy95/working_environment",
    "type": "metapackage",
    "description": "fedy95/working_environment",
    "license": "MIT",
    "authors": [
        {
            "name": "fedy95",
            "email": "fedy95.work@protonmail.com"
        }
    ],
    "require": {
        "jawira/plantuml": "^1.9",
        "localheinz/composer-normalize": "^1.3"
    },
    "minimum-stability": "stable",
    "scripts": {
        "post-install-cmd": "@post:install:cmd",
        "post-update-cmd": "@post:install:cmd",
        "json:fix": "composer normalize",
        "post:install:cmd": [
            "@validate:composer",
            "@json:fix"
        ],
        "validate:composer": {
            "lock": "@composer update --no-interaction --no-plugins --no-progress --no-scripts --no-suggest --no-autoloader --ignore-platform-reqs --root-reqs nothing --lock",
            "platform": "@composer check-platform-reqs",
            "strict": "@composer validate --strict --no-check-all"
        }
    }
}
